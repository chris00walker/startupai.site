# ============================================================================
# StartupAI Marketing Site - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Supabase (Database & Authentication)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ----------------------------------------------------------------------------
# Cross-Site Configuration
# ----------------------------------------------------------------------------
NEXT_PUBLIC_MARKETING_URL=https://startupai-site.netlify.app
NEXT_PUBLIC_APP_URL=https://app-startupai-site.netlify.app

# For local development, uncomment these:
# NEXT_PUBLIC_MARKETING_URL=http://localhost:3000
# NEXT_PUBLIC_APP_URL=http://localhost:3001

# ----------------------------------------------------------------------------
# JWT & Session Management (Backend only)
# ----------------------------------------------------------------------------
JWT_SECRET=your-jwt-secret-min-32-chars
SESSION_SECRET=your-session-secret-min-32-chars

# ----------------------------------------------------------------------------
# Analytics & Product Analytics
# ----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ----------------------------------------------------------------------------
# Development
# ----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug
